---
import ExampleShowcase from "./ExampleShowcase.jsx"
import LandingSectionText from "./LandingSectionText.astro"
---

<section class="landing-section relative overflow-hidden">
	<LandingSectionText>
		<Fragment slot="title">Content-focused</Fragment>
		<Fragment slot="body">
			Astro was designed for your content. Fetch data from any <a
				class="link-underline"
				href="https://docs.astro.build/en/guides/cms/">CMS</a
			> or work locally with
			<a class="link-underline" href="https://docs.astro.build/en/guides/content-collections/"
				>type-safe Markdown and MDX</a
			> APIs.
		</Fragment>
	</LandingSectionText>
	<div class="relative mt-12 flex w-full items-center">
		<div class="w-full overflow-hidden">
			<ExampleShowcase client:idle />
		</div>
	</div>
</section>

<style>
	section::before {
		@apply absolute bg-blue-green-gradient mask-radial-gradient z-noise-underlay;
		content: "";
		top: 15%;
		height: 60%;
		width: 150%;
		left: -25%;
	}

	@media screen(md) {
		section::before {
			left: 10%;
			top: 20%;
			height: 80%;
		}
	}

	@media screen(lg) {
		section::before {
			top: 5%;
			left: 15%;
			height: 90%;
		}
	}

	@media screen(2xl) {
		section::before {
			width: 100%;
			left: 25%;
			height: 80%;
		}
	}

	@media (min-width: 1920px) {
		section::before {
			width: 60%;
			left: 35%;
			height: 90%;
		}
	}
</style>
